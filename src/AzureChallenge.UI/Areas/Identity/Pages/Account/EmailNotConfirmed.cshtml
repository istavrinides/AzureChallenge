@page
@model EmailNotConfirmedModel
@{
    ViewData["Title"] = "Confirm Registration";
}

<h1>@ViewData["Title"]</h1>
<h4>Email confirmation required.</h4>
<hr />

<p class="text-info">
    You've successfully authenticated but it seems though you haven't confirmed you email address. Please enter your email address below to receive the confirmation email.
    <br />
    If you enter another email address other than the one we have on file, you won't receive an email.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Resend Confirmation</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
